.post--create {
  border: 1px;
  border-style: groove;
  padding: 10px;
  margin-top: 1.5em;
}

.post--create input {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  box-sizing: border-box;
}

.post--create textarea {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  box-sizing: border-box;
}
